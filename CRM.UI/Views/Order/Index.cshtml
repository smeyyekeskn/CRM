@model IEnumerable<CRM.Model.Order>

@{
    ViewBag.Title = "Index";
}
<h2>@ViewBag.Title</h2>
<div class="content-page">
    <!-- Start content -->

    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <p>
                        <br />
                        <a href="@Url.Action("Create")" class="btn btn-custom waves-effect waves-light ">Yeni Sipariş Ekle</a>
                    </p>
                    <table id="myTable" class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer.FirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RequiredDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SellingPrice)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RequiredDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SellingPrice)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.Id})" class="btn btn-outline-primary waves-effect waves-light ">Düzenle</a>
                                    <a href="@Url.Action("Delete", new { id = item.Id})" class="btn btn-outline-danger waves-effect waves-light">Sil</a>
                                    <a href="@Url.Action("Details", new { id = item.Id})" class="btn btn-outline-success waves-effect waves-light">Detaylar</a>
                                </td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
